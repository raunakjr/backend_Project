<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Notes</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Tailwind CDN -->
  </head>
  <body class="bg-gray-100">
    <!-- Main Section -->
    <div
      class="main w-full min-h-screen flex flex-col items-center justify-center py-8"
    >
      <!-- Form Section -->
      <div class="form bg-white p-8 rounded-lg shadow-lg w-full max-w-lg">
        <form action="/create" method="post" class="space-y-4">
          <!-- Title Input -->
          <input
            class="block w-full px-5 py-3 bg-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            type="text"
            placeholder="Title Goes here"
            name="title"
          />

          <!-- Task Details Textarea -->
          <textarea
            class="block w-full px-5 py-3 bg-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Write task details"
            name="details"
          ></textarea>

          <!-- Submit Button -->
          <input
            class="w-full py-3 bg-blue-600 text-white rounded-md cursor-pointer hover:bg-blue-700 transition"
            type="submit"
            value="Create Task"
          />
        </form>
      </div>

      <!-- Tasks Section -->
      <div
        class="tasks mt-10 w-full max-w-4xl flex flex-wrap justify-start gap-6"
      >
        <% Files.forEach(function(val){ %>
        <div class="task bg-white p-6 rounded-lg shadow-md w-full sm:w-72">
          <h1 class="text-black text-2xl font-semibold mb-3"><%= val%></h1>
          <a href="/file/<%=val %>" class="text-blue-500 hover:underline"
            >Read more...</a
          >
          <a href="/edit/<%=val %>" class="text-black-500 hover:underline"
            >Edit Filename</a
          >
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
