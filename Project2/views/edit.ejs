<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="form bg-white p-8 rounded-lg shadow-lg w-full max-w-lg">
      <form action="/edit" method="post" class="space-y-4">
        <!-- Title Input -->
        <input
          class="block w-full px-5 py-3 bg-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          type="text"
          placeholder="Previous Title"
          name="Previous_FileName"
          value="<%= filename %>"
        />
        <input
          class="block w-full px-5 py-3 bg-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          type="text"
          placeholder="New FileName"
          name="New_FileName"
        />

        <!-- Submit Button -->
        <input
          class="w-full py-3 bg-yellow-600 text-white rounded-md cursor-pointer hover:bg-blue-700 transition"
          type="submit"
          value="Update FileName"
        />
      </form>
    </div>
  </body>
</html>
