<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-900 text-white">
    <%- include("./headers") %>
    <div class="container mx-auto py-8">
      <!-- Title -->
      <h1 class="text-4xl ont-bold text-center text-blue-400 mb-8">
        Our Products
      </h1>

      <!-- Product Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% products.forEach((product) => { %>
        <div
          class="p-4 rounded-lg shadow-lg transition-all transform hover:scale-105 hover:shadow-xl h-full flex flex-col justify-between"
          style="background-color: <%= product.panelcolor %>"
        >
          <!-- Product Image -->
          <div class="relative">
            <img
              src="data:image/jpeg;base64,<%=product.image.toString('base64')%>"
              alt="<%= product.name %>"
              class="w-full h-40 object-cover rounded-lg"
              style="background-color: <%= product.bgcolor %>"
            />
            <% if (product.discount > 0) { %>
            <span
              class="absolute top-2 right-2 bg-red-500 text-white text-sm font-bold px-2 py-1 rounded-lg"
            >
              <%= product.discount %>% OFF
            </span>
            <% } else { %>
            <span
              class="absolute top-2 right-2 text-transparent px-2 py-1 rounded-lg"
            >
              No Discount
            </span>
            <% } %>
          </div>

          <!-- Product Info -->
          <div class="text-center py-4" style="color: <%= product.textcolor %>">
            <h3 class="text-xl font-semibold"><%= product.name %></h3>
            <p class="text-lg">Price: $<%= product.price %></p>
          </div>

          <!-- Action Buttons -->
          <div class="flex justify-center space-x-4 mt-4">
            <a
              href="wishlist/<%=product._id%>"
              class="hover:bg-opacity-80 text-white font-semibold py-2 px-4 rounded-md transition shadow-md"
              style="background-color: <%= product.bgcolor %>"
            >
              Add to Cart
            </a>
            <button
              class="hover:bg-opacity-80 text-white font-semibold py-2 px-4 rounded-md transition shadow-md"
              style="background-color: <%= product.bgcolor %>"
            >
              View Details
            </button>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
