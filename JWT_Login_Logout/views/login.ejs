<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-screen bg-zinc-900 text-white p-10">
      <div class="p-10">
        <form action="/login" method="post">
          <input
            class="px-3 py-3 rounded-md bg-transparent border-2 border-zinc-800"
            type="email"
            placeholder="Enter Email"
            name="email"
          />
          <input
            class="px-3 py-3 rounded-md bg-transparent border-2 border-zinc-800"
            type="password"
            placeholder="Enter password"
            name="password"
          />

          <input
            class="mt-20 px-5 py-2 rounded-md bg-yellow-700"
            type="submit"
            value="Login"
          />
        </form>
      </div>
    </div>
  </body>
</html>
